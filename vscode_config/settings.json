{
  "debug.onTaskErrors": "abort",
  "diffEditor.ignoreTrimWhitespace": false,
  "security.workspace.trust.untrustedFiles": "open",
  "window.autoDetectColorScheme": true,

  "markdown.updateLinksOnFileMove.enabled": "always",
  "markdown.validate.enabled": true,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.semanticTokenColorCustomizations": {
    "[Rouge]": {
      "enabled": true,
      "rules": {
        "*.declaration": { "bold": true }
      }
    }
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.codeLensFontFamily": "Fira Code",
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.definitionLinkOpensInPeek": true,
  "editor.fontFamily": "'Fira Code'",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.insertSpaces": false,
  "editor.lineHeight": 1.6,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.stickyScroll.enabled": true,
  "editor.stickyTabStops": true,
  "editor.suggest.preview": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.wordWrap": "on",
  // "editor.codeActionsOnSave": { "source.organizeImports": true },

  "javascript.autoClosingTags": true,
  "javascript.inlayHints.parameterNames.enabled": "none",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "typescript.autoClosingTags": true,
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "prettier.endOfLine": "auto",
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,

  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,

  "git.confirmSync": false,
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*.ejs": "html",
    "*.postcss": "scss",
    "*.cjs": "javascript",
    "*.mjs": "javascript",
    "*.css": "postcss",
    "*.shader": "glsl"
  },
  "[postcss]": {
    "editor.inlayHints.enabled": "on"
  },

  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.fullReload": false,

  "liveSassCompile.settings.autoprefix": null,
  "liveSassCompile.settings.showOutputWindowOn": "None",
  "liveSassCompile.settings.generateMap": false,
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".css",
      "savePath": "~../css"
    }
  ],

  "terminal.integrated.cursorBlinking": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "Bash",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.history": 10,
  "terminal.integrated.profiles.windows": {
    "cmd": {
      "path": ["${env:windir}\\Sysnative\\cmd.exe", "${env:windir}\\System32\\cmd.exe"],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Bash": {
      "path": "D:\\Program\\Git\\bin\\bash.exe"
    }
  },

  "html-to-css-autocompletion.autocompletionFilesScope": "workspace",
  "html-to-css-autocompletion.getSelectorsFromFileTypes": ["html", "php", "ejs", "jsx", "tsx"],
  "html.autoClosingTags": true,
  "html.format.indentInnerHtml": true,

  "vsintellicode.features.python.deepLearning": "enabled",
  "vsintellicode.java.completionsEnabled": false,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "vsintellicode.python.completionsEnabled": false,

  "vscode_custom_css.imports": ["file:///D:/Program/vscode/style.css"],

  // More theme: https://glitchbone.github.io/vscode-base16-term/#/tomorrow-night
  "workbench.colorCustomizations": {
    "terminal.ansiBlack": "#282C34",
    "terminal.ansiBlue": "#61AFEF",
    "terminal.ansiBrightBlack": "#545862",
    "terminal.ansiBrightBlue": "#61AFEF",
    "terminal.ansiBrightCyan": "#56B6C2",
    "terminal.ansiBrightGreen": "#98C379",
    "terminal.ansiBrightMagenta": "#C678DD",
    "terminal.ansiBrightRed": "#E06C75",
    "terminal.ansiBrightWhite": "#C8CCD4",
    "terminal.ansiBrightYellow": "#E5C07B",
    "terminal.ansiCyan": "#56B6C2",
    "terminal.ansiGreen": "#98C379",
    "terminal.ansiMagenta": "#C678DD",
    "terminal.ansiRed": "#E06C75",
    "terminal.ansiWhite": "#ABB2BF",
    "terminal.ansiYellow": "#E5C07B",
    "terminal.foreground": "#ABB2BF",
    "terminalCursor.background": "#ABB2BF",
    "terminalCursor.foreground": "#ABB2BF"
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",

  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.hidesExplorerArrows": true,

  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.lint.invalidScreen": "warning",
  "tailwindCSS.lint.invalidTailwindDirective": "warning",
  "tailwindCSS.lint.invalidVariant": "warning",

  "emmet.includeLanguages": {
    "postcss": "css"
  },

  "reactSnippets.settings.typescriptPropsStatePrefix": "interface",
  "webgl-glsl-editor.format.placeSpaceAfterKeywords": true,
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "workbench.colorTheme": "Evondev Dracula Darker Contrast"
}
