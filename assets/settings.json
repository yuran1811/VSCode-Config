{
	"debug.onTaskErrors": "abort",
	"window.autoDetectColorScheme": true,

	"editor.renderWhitespace": "none",
	"editor.fontFamily": "'Fira Code'",
	"editor.codeLensFontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"editor.insertSpaces": false,
	"editor.wordWrap": "on",
	"editor.definitionLinkOpensInPeek": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.formatOnType": false,
	"editor.minimap.enabled": false,
	"editor.suggestSelection": "first",
	"editor.bracketPairColorization.enabled": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.lineHeight": 1.7,
	"editor.suggest.preview": true,
	"editor.cursorBlinking": "solid",
	"editor.cursorWidth": 2,

	"javascript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterNames.enabled": "all",

	"liveServer.settings.CustomBrowser": "chrome",
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.donotVerifyTags": true,
	// "liveServer.settings.fullReload": true,

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"html.format.indentInnerHtml": true,
	"security.workspace.trust.untrustedFiles": "open",

	"prettier.endOfLine": "auto",
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,

	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"vscode_custom_css.imports": ["file:///D:/Program/vscode/style.css"],

	"extensions.ignoreRecommendations": true,
	"extensions.autoUpdate": "onlyEnabledExtensions",

	"git.confirmSync": false,

	"material-icon-theme.hidesExplorerArrows": true,

	// "liveSassCompile.settings.autoprefix": null,
	"liveSassCompile.settings.showOutputWindow": false,
	"liveSassCompile.settings.generateMap": false,
	"liveSassCompile.settings.formats": [
		{
			"format": "compressed",
			"extensionName": ".css",
			"savePath": "~../css"
		}
	],
	"livePreview.portNumber": 1811,
	"livePreview.notifyOnOpenLooseFile": false,
	"livePreview.serverKeepAliveAfterEmbeddedPreviewClose": 10,
	"livePreview.autoRefreshPreview": "On Changes to Saved Files",

	"terminal.integrated.defaultProfile.windows": "cmd",
	"terminal.integrated.profiles.windows": {
		"cmd": {
			"path": [
				"${env:windir}\\Sysnative\\cmd.exe",
				"${env:windir}\\System32\\cmd.exe"
			],
			"args": [],
			"icon": "terminal-cmd"
		},
		"Git Bash": {
			"source": "Git Bash"
		}
	},
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.enableMultiLinePasteWarning": false,

	"workbench.colorTheme": "Evondev Dracula Darker Contrast",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.editor.enablePreview": false,
	"workbench.startupEditor": "none",

	"files.autoSave": "afterDelay",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"html-to-css-autocompletion.autocompletionFilesScope": "workspace",
	"window.zoomLevel": 0.7,
	"vsintellicode.features.apiExamples": "enabled",
	"vsintellicode.features.python.deepLearning": "enabled",
	"vsintellicode.java.completionsEnabled": false,
	"vsintellicode.python.completionsEnabled": false
}
