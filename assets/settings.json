{
	"debug.onTaskErrors": "abort",
	"window.autoDetectColorScheme": true,

	"editor.renderWhitespace": "none",
	"editor.fontFamily": "'Fira Code'",
	"editor.codeLensFontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"editor.insertSpaces": false,
	"editor.wordWrap": "on",
	"editor.definitionLinkOpensInPeek": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.formatOnType": false,
	"editor.minimap.enabled": false,
	"editor.suggestSelection": "first",
	"editor.bracketPairColorization.enabled": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.lineHeight": 1.7,
	"editor.suggest.preview": true,

	"javascript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterNames.enabled": "all",

	"liveServer.settings.CustomBrowser": "chrome",
	"liveServer.settings.donotVerifyTags": true,
	"liveServer.settings.fullReload": true,
	"liveServer.settings.donotShowInfoMsg": true,

	"html.format.indentInnerHtml": true,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"security.workspace.trust.untrustedFiles": "open",

	"prettier.singleQuote": true,
	"prettier.endOfLine": "auto",
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,

	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"vscode_custom_css.imports": ["file:///D:/Program/vscode/style.css"],

	"extensions.ignoreRecommendations": true,
	"extensions.autoUpdate": "onlyEnabledExtensions",

	"git.confirmSync": false,

	"material-icon-theme.hidesExplorerArrows": true,

	"liveSassCompile.settings.showOutputWindow": false,
	"liveSassCompile.settings.generateMap": false,
	"livePreview.portNumber": 1811,
	"livePreview.notifyOnOpenLooseFile": false,
	"livePreview.serverKeepAliveAfterEmbeddedPreviewClose": 10,
	"livePreview.autoRefreshPreview": "On Changes to Saved Files",

	"terminal.integrated.defaultProfile.windows": "cmd",
	"terminal.integrated.profiles.windows": {
		"cmd": {
			"path": [
				"${env:windir}\\Sysnative\\cmd.exe",
				"${env:windir}\\System32\\cmd.exe"
			],
			"args": [],
			"icon": "terminal-cmd"
		},
		"Git Bash": {
			"source": "Git Bash"
		}
	},
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",

	"workbench.colorTheme": "Dracula darker contrast",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.startupEditor": "none",
	"workbench.editor.enablePreview": false,

	"tabnine.experimentalAutoImports": true,
	"files.autoSave": "afterDelay",
	"window.zoomLevel": 1

	// "indentRainbow.colors": [
	// 	"#fec5bb",
